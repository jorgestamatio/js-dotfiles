# Aliases

# Shortcut to this file 
alias aliasconfig="vim ~/dotfiles/aliases"
alias aliaslocalconfig="vim ~/dotfiles/aliases_local"
alias bashconf="vim ~/dotfiles/bashrc"

# Navigation aliases
alias ..="cd .."
alias c='cd'
alias l='ls'

#alias to sites-available
alias sites-available="cd /etc/apache2/sites-available"


# Restart server
alias restarserver="sudo service apache2 restart"


killd () {
for session in $(screen -ls | grep -o '[0-9]\{5\}')
do
screen -S "${session}" -X quit;
done
}
